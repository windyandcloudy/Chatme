<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Me.MeFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvtMe"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/imgAvtMe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/imgCameraMe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:tint="@color/black"
            android:layout_alignBottom="@id/cvAvtMe"
            android:layout_alignRight="@id/cvAvtMe"
            tools:ignore="UseAppTint" />
        <TextView
            android:id="@+id/tvUsernameMe"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/cvAvtMe"
            android:textSize="30dp"/>
        <LinearLayout
            android:id="@+id/lnInfor"
            android:layout_margin="10dp"
            android:layout_below="@id/tvUsernameMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fullname: "
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:drawableTint="@color/origin"
                    android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="25dp"
                    android:drawableTint="#06AA08"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvFullnameMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPhoneMe"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnInfor"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUpdateInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
                android:drawableTint="@color/black"
                android:text="Chỉnh sửa thông tin"/>
            <TextView
                android:id="@+id/tvUpdatePassword"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Đổi mật khẩu"
                android:drawableLeft="@drawable/ic_baseline_settings_24"
                android:drawableTint="@color/black"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Đăng xuất"
                android:drawableLeft="@drawable/ic_baseline_call_missed_outgoing_24"
                android:drawableTint="@color/black"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
</layout>